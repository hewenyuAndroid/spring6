<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
>

    <!--
        引入外部属性文件，resources 目录下的 jdbc.properties 文件
        需要使用到  xmlns:context="http://www.springframework.org/schema/context" context 命名空间
    -->

    <!-- 导入 resources 目录下的 jdbc.propertites 文件 -->
    <context:property-placeholder location="classpath:jdbc.properties"/>

    <bean id="mysqlConfig" class="com.example.spring.jdbc.MysqlConfig">
        <!--
            使用 ${} 读取配置文件中的属性值
        -->
        <constructor-arg name="user" value="${jdbc.user}"></constructor-arg>
        <constructor-arg name="password" value="${jdbc.password}"></constructor-arg>
        <constructor-arg name="url" value="${jdbc.url}"></constructor-arg>
        <constructor-arg name="driver" value="${jdbc.driver}"></constructor-arg>
    </bean>


</beans>